<div class="container">
  <div class="row">
    <div  class="col">
      <h2>Categories</h2>
    </div>  
    <div  class="col mt-3">
      <button type="button" class="btn btn-outline-secondary"><%= link_to "Create Category", new_category_path %></button> 
    </div>  
  </div>

    <ul>
      <% @categories.each do |category| %>
        <li><p><%= link_to category.name, category_recipes_path(category) %> <%= link_to "[Edit]", edit_category_path(category) %> <%= link_to "[x]", category_path(category), method: :delete, data: {confirm: "Are you sure?"} %></p></li>
      <% end %>
    </ul>

    <button type="button" class="btn btn-outline-secondary"><%= link_to "Back to Recipes", recipes_path %></button>
</div>